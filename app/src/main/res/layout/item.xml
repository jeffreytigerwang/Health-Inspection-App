<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/item_restaurantLogo"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/icon1" />

    <ImageView
        android:id="@+id/item_hazard"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="117dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@id/item_restaurantLogo"
        app:srcCompat="@drawable/icon1" />

    <TextView
        android:id="@+id/item_restaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/item_restaurantLogo"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_totalIssues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="67dp"
        android:layout_toEndOf="@+id/item_restaurantLogo" />

    <TextView
        android:id="@+id/list_hazard_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="99dp"
        android:layout_toEndOf="@+id/item_restaurantLogo" />

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="131dp"
        android:layout_toEndOf="@+id/item_restaurantLogo" />

    <ImageView
        android:id="@+id/favouritebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="31dp"
        android:adjustViewBounds="true"
        android:maxWidth="68dp"
        android:maxHeight="68dp"
        android:tag="notfavourite"
        app:srcCompat="@drawable/star_close" />

</RelativeLayout>
