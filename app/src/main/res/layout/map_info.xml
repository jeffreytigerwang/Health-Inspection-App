<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textSetMapAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textSetMapHazard"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/textMapAddress"
            android:text="na" />

        <ImageView
            android:id="@+id/info_item_restaurantLogo"
            android:layout_width="72dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@android:drawable/star_big_off" />

        <TextView
            android:id="@+id/info_item_restaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/info_item_restaurantLogo"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textMapHazard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/info_item_restaurantLogo"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/info_item_restaurantLogo"
            android:text="Hazard level:" />

        <TextView
            android:id="@+id/textMapAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textMapHazard"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/info_item_restaurantLogo"
            android:text="Address:" />

        <ImageView
            android:id="@+id/imgMapHazard"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="4dp"
            app:srcCompat="@android:drawable/presence_online" />

        <TextView
            android:id="@+id/textSetMapHazard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textMapHazard"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/textMapHazard"
            android:text="na" />

    </RelativeLayout>
</RelativeLayout>
